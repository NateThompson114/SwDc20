<div class="banners-container">
    <div class="banners-button @(IsVisible ? "visible" : "")" @onclick="OnClick">
        <i class="fa-sharp-duotone fa-solid fa-shield-quartered"></i>
    </div>
</div>

<style>
    .banners-container {
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 10px;
    }

    .banners-button {
        width: 90px;  /* Maintains magazine proportions */
        height: 120px;
        cursor: pointer;
        opacity: 0;
        transition: all 0.3s ease;
        box-shadow: 2px 2px 10px rgba(0,0,0,0.3);
        border-radius: 3px;
        overflow: hidden;
        transform-origin: center center;
    }

    .banners-button.visible {
        opacity: 1;
    }

    .banners-button img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .banners-button:hover {
        transform: scale(1.2) rotate(5deg);
        box-shadow: 4px 4px 15px rgba(0,0,0,0.4);
        z-index: 1;
    }
</style>

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }
}